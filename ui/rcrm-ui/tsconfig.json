{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@styled-components/*": ["./src/components/styled/*"],
      "@feature-components/*": ["./src/components/features/*"],
      "@slices/*": ["./src/store/Slices/*"],
      "@ui-components/*": ["./src/components/ui-components/*"],
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@endpoints/*": ["./src/endpoints/*"],
      "@validation-schemes/*": ["./src/validation-schemes/*"],
      "@enumerations/*": ["./src/enumerations/*"],
      "@utilities/*": ["./src/utilities/*"],
      "@pages/*": ["./src/pages/*"],
      "@guards/*": ["./src/guards/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@styles/*": ["./src/styles"],
      "@routes/*": ["./src/routes/*"],
      "@locales/*": ["./src/locales/*"],
      "@mui-tiptap/*": ["../falcon-ui/node_modules/mui-tiptap/dist/*"],
      "@tiptap": ["./node_modules/@tiptap/*"],
      "@mui-tiptap-controls/*": ["./node_modules/mui-tiptap/dist/controls/*"],
      "@hooks": ["./src/hooks/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
